{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "strict": true,
        "jsx": "react",
        "typeRoots": [
            "typings/**/*.d.ts",
            "./node_modules/@types/"
        ],
        "plugins": [{
            "name": "typescript-plugin-css-modules"
        }],
        "noImplicitAny": false,
        "sourceMap": false,
        "declaration": true,
        "strictNullChecks": false,
        "skipLibCheck": true,
        "allowJs": true,
        "pretty": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "lib": [
            "es5",
            "dom",
            "esnext",
            "es2017",
            "es2015",
            "es2016"
        ],
        "outDir": "./lib"
    },
    "compileOnSave": false,
    "include": [
        "./src",
        "./typings/"
    ],
    "exclude": [
        "./demo",
        "./node_modules/**/*",
        "dist/**/*",
        "**/*.js",
    ]
}
